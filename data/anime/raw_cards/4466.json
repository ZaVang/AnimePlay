                    "images": {
                        "large": "https://lain.bgm.tv/pic/crt/l/05/0c/4101_prsn_usm7u.jpg?r=1657030384",
                        "medium": "https://lain.bgm.tv/r/400/pic/crt/l/05/0c/4101_prsn_usm7u.jpg?r=1657030384",

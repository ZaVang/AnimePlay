                    "images": {
                        "large": "https://lain.bgm.tv/pic/crt/l/38/bf/5824_prsn_7eWbT.jpg",
                        "medium": "https://lain.bgm.tv/r/400/pic/crt/l/38/bf/5824_prsn_7eWbT.jpg",
                        "small": "https://lain.bgm.tv/r/100/pic/crt/l/38/bf/5824_prsn_7eWbT.jpg",
                        "grid": "https://lain.bgm.tv/pic/crt/g/38/bf/5824_prsn_7eWbT.jpg"

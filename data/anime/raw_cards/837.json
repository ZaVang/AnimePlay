                {
                    "id": 3829,
                    "name": "矢島晶子",
                    "type": 1,
                    "career": [
                        "artist",
                        "seiyu"
                    ],
                    "images": {
                        "large": "https://lain.bgm.tv/pic/crt/l/77/5d/3829_prsn_koK6u.jpg",
                        "medium": "https://lain.bgm.tv/r/400/pic/crt/l/77/5d/3829_prsn_koK6u.jpg",
                        "small": "https://lain.bgm.tv/r/100/pic/crt/l/77/5d/3829_prsn_koK6u.jpg",
                        "grid": "https://lain.bgm.tv/pic/crt/g/77/5d/3829_prsn_koK6u.jpg"

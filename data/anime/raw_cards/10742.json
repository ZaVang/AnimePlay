                    "images": {
                        "large": "https://lain.bgm.tv/pic/crt/l/1b/b3/4670_prsn_ggUMV.jpg?r=1479691446",
                        "medium": "https://lain.bgm.tv/r/400/pic/crt/l/1b/b3/4670_prsn_ggUMV.jpg?r=1479691446",
